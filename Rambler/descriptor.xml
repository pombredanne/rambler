<?xml version="1.0"?>

<ejb-jar>

<!-- core services -->

  <service>
    <name>EventService</name>

    <description>Provides a mechanism for objects to communicate with
    each other without having any knowledge of the other
    object.</description>
    <class>Rambler.EventChannel.EventChannel</class>
  </service>

<!-- Handlers should be replaced by component loaders
